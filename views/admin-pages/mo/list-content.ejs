<!-- page content -->
<div class="right_col" role="main">
  <div class="col-md-12 col-sm-12 ">
    <div class="x_panel">
      <div class="x_title">
        <h2>Math Olympiad<small>Participant list</small></h2>
        <ul class="nav navbar-right panel_toolbox">
          <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
          </li>
        </ul>
        <div class="clearfix"></div>
      </div>
      <div class="x_content">
        <br/>
        <% let success1="Data has been deleted succesfully!" %> 
        <% let success2="Payment completed successfuly!" %> 
        <% let success3="Participant has been selected successfully!" %> 
        <%if(error.length>0){if(error == success1 || error == success2 || success3){%>
          <div class="alert alert-success">
            <%= error%><br />
          </div>
          <%}else{%>
          <div class="alert alert-success">
            <%= error%><br />
          </div>
        <%}%>
      <%}%>
          <div class="row">
              <div class="col-sm-12">
                <div class="card-box table-responsive">
        <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
          <thead>
            <tr>
              <th>Name</th>
              <th>Category</th>
              <th>Contact Number</th>
              <th>E-mail</th>
              <th>Institution</th>
              <th>T-shirt</th>
              <th>Total</th>
              <th>Paid</th>
              <th>Selected</th>
              <th>Payment Status</th>
              <th>Select</th>
              <th>Payment done</th>
              <th>Edit</th>
              <th>Delete</th>
            </tr>
          </thead>
          <tbody>
            <%if(participants.length>0){
              participants.forEach(participant=>{%>
                <tr>
                  <td><%=participant.name%></td>
                  <td><%=participant.category%></td>
                  <td><%=participant.contact%></td>
                  <td><%=participant.email%></td>
                  <td><%=participant.institution%></td>
                  <td><%=participant.tshirt%></td>
                  <td><%=participant.total%></td>
                  <td><%=participant.paid%></td>
                  <td><%if(participant.selected == true){%>
                      <p style="color: cadetblue;">Yes</p>
                    <%}else{%>
                      <p style="color: brown;">No</p>
                    <%}%></td>
                  <td>
                    <%if(participant.paid == participant.total){%>
                      <p style="color: cadetblue;">Paid</p>
                    <%}else{%>
                      <p style="color: brown;">Incomplete</p>
                    <%}%>
                  </td>
                  <td><% const selectURL = "select/" + participant._id %>
                      <a href="<%= selectURL %>" data-toggle="tooltip" title="Complete">
                        <i style="color: rgb(13, 78, 218);" class="glyphicon glyphicon-ok"></i>
                      </a></td>
                  <td>
                    <% const paymentDoneURL = "paymentDone/" + participant._id %>
                      <a href="<%= paymentDoneURL %>" data-toggle="tooltip" title="Complete">
                        <i style="color: rgb(2, 175, 2);" class="glyphicon glyphicon-check"></i>
                      </a>
                    </td>
                  <td><% const editURL = "edit/" + participant._id %>
                      <a href="<%= editURL %>" data-toggle="tooltip" title="Complete">
                        <i style="color: rgb(116, 118, 119);" class="glyphicon glyphicon-pencil"></i>
                      </a></td>
                  <td>
                    <% const deleteURL = "delete/" + participant._id %>
                      <a href="<%= deleteURL %>" data-toggle="tooltip" title="Delete">
                        <i style="color: brown;" class="glyphicon glyphicon-trash"></i>
                      </a>
                  </td>
                </tr>
             <% })
            }%>
          </tbody>
        </table>


      </div>
    </div>
  </div>
</div>
    </div>
  </div>
</div>
